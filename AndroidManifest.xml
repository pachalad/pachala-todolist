<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.ualberta.cs.pachalatodo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ca.ualberta.cs.pachalatodo.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ca.ualberta.cs.pachalatodo.AddItemActivity"
            android:label="@string/title_activity_add_item"
            android:parentActivityName="com.example.todo" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.todo" />
        </activity>
        <activity
            android:name="ca.ualberta.cs.pachalatodo.ArchiveActivity"
            android:label="@string/title_activity_archive"
            android:parentActivityName="com.example.todo" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.todo" />
        </activity>
        <activity
            android:name="ca.ualberta.cs.pachalatodo.StatActivity"
            android:label="@string/title_activity_stat"
            android:parentActivityName="com.example.todo" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.todo" />
        </activity>
        <activity
            android:name="ca.ualberta.cs.pachalatodo.EmailActivity"
            android:label="@string/title_activity_email"
            android:parentActivityName="com.example.todo" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.todo" />
        </activity>
    </application>

</manifest>
